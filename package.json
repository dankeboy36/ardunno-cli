{
  "name": "ardunno-cli-api",
  "version": "0.1.0-beta.5",
  "description": "nice-grpc API for the Arduino CLI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "arduino",
    "proto",
    "grpc"
  ],
  "author": "dankeboy36",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dankeboy36/ardunno-cli-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dankeboy36/ardunno-cli-api.git"
  },
  "scripts": {
    "api:clone": "rimraf ./arduino-cli && git clone https://github.com/arduino/arduino-cli.git --depth 1 -qq && git -C ./arduino-cli fetch --tags -qq && git -C ./arduino-cli checkout tags/0.28.0 -b 0.28.0 -qq",
    "api:generate": "mkdirp ./api && ./generate.sh",
    "api:index": "ctix single -p ./tsconfig.json -o ./api/index.ts -w && replace ' type' '' ./api/index.ts ",
    "api:format": "prettier --write .",
    "api:build": "tsup ./api/index.ts --format cjs,esm --dts --clean",
    "api:all": "npm run api:clone && npm run api:generate && npm run api:index && npm run api:format && npm run api:build",
    "prepublishOnly": "npm run api:all"
  },
  "dependencies": {
    "nice-grpc-common": "^2.0.0",
    "protobufjs": "^7.1.1"
  },
  "devDependencies": {
    "ctix": "^1.5.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.7.1",
    "replace": "^0.2.2",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.125.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  }
}
